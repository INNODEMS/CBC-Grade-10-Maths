    <questiontext format="moodle_auto_format" original-id="tree-diagram-example-1-1-2" assembly-id="tree-diagram-example-1-1-2" unique-id="tree-diagram-example-1-1-2">
      <text original-id="tree-diagram-example-1-1-2-1" assembly-id="tree-diagram-example-1-1-2-1" unique-id="tree-diagram-example-1-1-2-1">&lt;p&gt;A coin is tossed {@random_toss@} times. What is the probability of getting exactly two heads? &lt;/p&gt;

[[jsxgraph]]
JXG.Options.text.useMathJax = true;
var board = JXG.JSXGraph.initBoard(divid, {
  boundingbox: [-1,5, 3*{#random_toss#}+2, -5],
  axis:false,
  grid:false,
  showNavigation:false,
  showCopyright:false,
  pan:false,
  zoom:false
});
board.suspendUpdate();

// --- CONFIG ---
var n = {#random_toss#};   // number of tosses (random 2–5)
var xStep = 3;             // horizontal spacing
var yTop = 4;              // top Y
var yBottom = -4;          // bottom Y
var radius = 0.35;         // circle radius

// nodes[level][index] will hold fixed invisible centers
var nodes = [];

// root
nodes[0] = [];
var root = board.create('point',[0,(yTop+yBottom)/2], {
  visible:false,fixed:true,name:''});
nodes[0].push(root);

// build levels 1..n
for (var level=1; level&lt;=n; level++) {
  nodes[level] = [];
  var count = Math.pow(2, level);
  for (var j=0; j&lt;count; j++) {
    var x = level*xStep;
    var y = (count===1) ? (yTop+yBottom)/2 : yTop - j*((yTop-yBottom)/(count-1));

    // invisible fixed center
    var center = board.create('point',[x,y],{visible:false,fixed:true});
    nodes[level].push(center);

    // circle
    board.create('circle',[center,radius],{
      strokeColor:'black', fillColor:'#fff',
      fixed:true, withLabel:false, highlight:false
    });

    // label (H for even branch, T for odd)
    var lbl = (j%2===0)?'H':'T';
    board.create('text',[x,y,lbl],{
      anchorX:'middle',anchorY:'middle',
      fixed:true,fontSize:14,highlight:false
    });

    // connect to parent
    var parent = nodes[level-1][Math.floor(j/2)];
    board.create('segment',[parent,center],{
      strokeWidth:1,fixed:true,highlight:false
    });
  }
}

board.unsuspendUpdate();
[[/jsxgraph]]



&lt;p&gt;&lt;/p&gt;&lt;p&gt;[[input:ans1]] [[validation:ans1]][[feedback:prt1]]&lt;/p&gt;</text>
