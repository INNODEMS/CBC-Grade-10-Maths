    <questionvariables>
      <text>/* 1. Generate Random Components for Vector a */
ax: rand_with_step(-5, 5, 1);
ay: rand_with_step(-5, 5, 1);
vec_a: matrix([ax],[ay]);

/* 2. Generate Random Components for Vector b */
bx: rand_with_step(-5, 5, 1);
by: rand_with_step(-5, 5, 1);
vec_b: matrix([bx],[by]);

/* 3. Generate Random Scalars for Part (b) */
/* We want something like 2a - 3b, so we pick positive integers usually */
k1: rand_with_step(2, 5, 1);
k2: rand_with_step(2, 5, 1);

/* 4. Calculate Answers */

/* Part (a): Addition */
ta1: vec_a + vec_b;

/* Part (b): Linear Combination (k1*a - k2*b) */
ta2: k1*vec_a - k2*vec_b;

/* 5. Intermediate steps for the Worked Solution */
/* We define these to display the multiplication steps clearly in feedback */
step1_a: k1 * vec_a;
step1_b: k2 * vec_b;</text>
