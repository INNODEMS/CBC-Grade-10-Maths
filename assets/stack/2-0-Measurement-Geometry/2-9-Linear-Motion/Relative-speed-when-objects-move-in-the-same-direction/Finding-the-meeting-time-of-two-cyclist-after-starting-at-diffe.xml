      <text>/* Speeds (km/h) */
v1 : rand(6) + 12;        /* 12â€“17 km/h */
v2 : v1 + rand(5) + 3;   /* always faster */

/* Delay between starts (hours) */
delay_h : (rand(8) + 1) * 1/9;   

/* Head start distance */
head_start : v1 * delay_h;

/* Relative speed */
rel_speed : v2 - v1;

/* Time to catch up (hours after second starts) */
ta : head_start / rel_speed;
mistake_rel_speed:v2 + v1;
mistake_ta:head_start / mistake_rel_speed;
</text>
