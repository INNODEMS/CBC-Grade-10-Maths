    <questionvariables>
      <text><![CDATA[/* Total distance between towns (km) */
D : rand(7)*20 + 200;

/* Speeds (km/h) */
v1 : rand(5)*10 + 70;
v2 : rand(5)*10 + 90;

/* Start time of first motorist (hours, 24h clock) */
h_start : rand(3) + 7;
t1_start : h_start;

/* Delay before second motorist leaves (hours) */
delay_h : (rand(4) + 1)/4;   /* 15, 30, 45, 60 minutes */

/* Second motorist start time */
t2_start : t1_start + delay_h;

/* Distance covered by first motorist before second starts */
d_headstart : v1 * delay_h;

/* Remaining distance */
d_remaining : D - d_headstart;

/* Relative speed (towards each other) */
v_rel : v1 + v2;

/* Time after second starts until they meet */
t_after_2 : d_remaining / v_rel;

/* Distance from Nairobi */
d_from_nairobi : v2 * t_after_2;

/* Teacher answers */
ta1 : t_after_2;
ta2 : d_from_nairobi;

/* Helper to format minutes as two digits */
twodig(n) := if n < 10 then sconcat("0", string(n)) else string(n);

/* Convert times to hh:mm strings */
t1_h : floor(t1_start);
t1_m : 60*(t1_start - t1_h);
t1_time_str : sconcat(string(t1_h), ":", twodig(t1_m));

t2_h : floor(t2_start);
t2_m : 60*(t2_start - t2_h);
t2_time_str : sconcat(string(t2_h), ":", twodig(t2_m));

/*mistake*/
v_rel_wrong : v1 - v2;  /* Should be v1 + v2 */
mistake_ta1 : d_remaining / v_rel_wrong;
/* WRONG CODE - Using full distance D */
t_after_2_wrong2 : D / (v1 + v2);  /* Should be d_remaining */
/* WRONG CODE - Using first motorist's speed */
d_from_nairobi_wrong : v1 * t_after_2;  /* Should be v2 */
/* WRONG CODE - Using delay time instead of travel time */
d_from_nairobi_wrong2 : v2 * delay_h;  /* Should be t_after_2 */

]]></text>
