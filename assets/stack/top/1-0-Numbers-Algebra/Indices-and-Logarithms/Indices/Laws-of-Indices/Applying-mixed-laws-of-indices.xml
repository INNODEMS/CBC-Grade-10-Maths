b: rand([1,2,3]);     /* number of books */
c: rand([1,2,3]);     /* pages per bundle */

/* Correct simplified exponent */
exp_total: (a + b) - c;

/* Full expression (for teacher notes) */
expr: (base^a * base^b) / base^c;

/* Common student mistakes */
m1: base^(a + b + c);
m2: base^(a - b - c);
m3: base^(a*b - c);
</text>
