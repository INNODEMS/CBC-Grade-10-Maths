    <questionvariables>
      <text><![CDATA[/*Random 5-digit number*/
num: rand(90000) + 10000;

/*Properties */
is_even : mod(num, 2) = 0;

/* Prime test */
is_prime(n) := if n < 2 then false
  else if n = 2 then true
  else if mod(n,2) = 0 then false
  else block(
    [i:3, lim:floor(sqrt(n)), res:true],
    while i <= lim and res do (
      if mod(n,i) = 0 then res:false,
      i:i+2
    ),
    res
  );

is_prime_num : is_prime(num);
is_composite : (num > 1 and not is_prime_num);

/*Options (fixed meaning)*/
options : [
  [1, is_even,        "It is even"],
  [2, not is_even,    "It is odd"],
  [3, is_prime_num,   "It is prime"],
  [4, is_composite,   "It is composite"]
];

/* Randomise order */
ta : random_permutation(options);

/* Correct checkbox indices */
ta_index : sort(makelist(x[1], x, sublist(ta, lambda([y], y[2]))));
]]></text>
