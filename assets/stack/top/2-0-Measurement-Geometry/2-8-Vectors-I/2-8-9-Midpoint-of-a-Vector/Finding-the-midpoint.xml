    <questionvariables>
      <text><![CDATA[/* 1. Randomize Start Point A (Keep small to allow room for triangle) */
/* Range: 2, 4, 6, 8 */
ax: 2 * rand_with_step(1, 4, 1);
ay: 2 * rand_with_step(1, 4, 1);

/* 2. Define B (Right of A) */
/* We add between 4 and 10 units. Max x = 8 + 10 = 18. Safe < 20 */
bx: ax + 2 * rand_with_step(2, 5, 1);
by: ay; 

/* 3. Define C (Above A, shifted horizontally slightly) */
/* cx shift: 2 to 6. Max cx = 8 + 6 = 14. Safe. */
cx: ax + 2 * rand_with_step(1, 3, 1);
/* cy shift: 4 to 10. Max cy = 8 + 10 = 18. Safe < 20 */
cy: ay + 2 * rand_with_step(2, 5, 1);

/* 4. Calculate Midpoints */

/* M is midpoint of AC */
mx: (ax + cx) / 2;
my: (ay + cy) / 2;
ta_m: [mx, my];

/* N is midpoint of AB (Bottom edge) */
nx: (ax + bx) / 2;
ny: (ay + by) / 2;
ta_n: [nx, ny];

/* 5. Wrong Answers for Feedback */
wa_m_sub: [(ax - cx) / 2, (ay - cy) / 2];
wa_n_sub: [(ax - bx) / 2, (ay - by) / 2];

wa_m_sum: [ax + cx, ay + cy];
wa_n_sum: [ax + bx, ay + by];]]></text>
