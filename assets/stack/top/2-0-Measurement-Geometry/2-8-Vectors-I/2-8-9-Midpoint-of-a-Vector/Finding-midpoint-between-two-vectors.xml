    <questionvariables>
      <text>/* 1. Randomize the Ratios */
/* Ratio for S on PR (s1 : s2) */
s1: rand_with_step(1, 4, 1);
s2: rand_with_step(1, 4, 1);
s_sum: s1 + s2;

/* Ratio for T on QR (t1 : t2) */
t1: rand_with_step(1, 4, 1);
t2: rand_with_step(1, 4, 1);
t_sum: t1 + t2;

/* Ratio for U on PQ (u1 : u2) */
u1: rand_with_step(1, 4, 1);
u2: rand_with_step(1, 4, 1);
u_sum: u1 + u2;

/* 2. Calculate the Answers in terms of u and v */
/* Note: u and v are treated as variables here */

/* (a) Vector PS */
/* PS is a fraction of PR (v) */
ta_ps: (s1 / s_sum) * v;

/* (c) Vector PU - doing this early as it is simple */
/* PU is a fraction of PQ (u) */
ta_pu: (u1 / u_sum) * u;

/* (b) Vector PT */
/* Using vector addition: PT = PQ + QT */
/* QT is a fraction of QR. QR = v - u */
vec_qr: v - u;
vec_qt: (t1 / t_sum) * vec_qr;
ta_pt: u + vec_qt; 
/* Simplify explicitly for the solution display */
ta_pt_simp: expand(ta_pt);

/* (d) Vector ST */
/* ST = PT - PS */
ta_st: ta_pt - ta_ps;
ta_st_simp: expand(ta_st);

/* (e) Vector TU */
/* TU = PU - PT */
ta_tu: ta_pu - ta_pt;
ta_tu_simp: expand(ta_tu);</text>
