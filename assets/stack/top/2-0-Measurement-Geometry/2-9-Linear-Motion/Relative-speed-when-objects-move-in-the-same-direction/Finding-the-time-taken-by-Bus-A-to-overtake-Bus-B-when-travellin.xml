    <questionvariables>
      <text><![CDATA[/* Speeds in km/h */
vB : rand(21) + 30;        /* Bus B: 30–50 km/h */
vA : vB + rand(11) + 5;   /* Bus A faster by 5–15 km/h */

/* Distance with unit preserved (meters or km) */
if rand(2) = 0 then (
    d_val : rand(900) + 200,          
    d_unit : "m",
    d : d_val * m,
    d_km : d_val/1000
) else (
    d_val : rand(90) + 100,          
    d_unit : "km",
    d : d_val * km,
    d_km : d_val
);

/* Relative speed */
v_rel : vA - vB;

/* Exact time in hours */
ta : d_km / v_rel;
/*mistake*/
wrong2 :
  if d_unit = "m" then d_val / v_rel else false;
wrong1 : d_km / (vA + vB);


]]></text>
