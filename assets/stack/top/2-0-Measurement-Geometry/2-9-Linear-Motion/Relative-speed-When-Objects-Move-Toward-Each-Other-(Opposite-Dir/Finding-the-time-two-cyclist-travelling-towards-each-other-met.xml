    <questionvariables>
      <text><![CDATA[/* Initial distance */
D : rand(5)*10 + 40;      /* 40–80 km */
/* Speeds (km/h)*/

/* Cyclist A */
vA1 : rand(5) + 16;       
vA2 : vA1 - (rand(3) + 2);

/* Cyclist B */
vB1 : rand(5) + 11;       /* 11–15 */
vB2 : vB1 - (rand(3) + 2);

/*  Time intervals (minutes) */

tA_min : (rand(3) + 1) * 15;   /* 15, 30, 45 minutes */
tB_min : rand_with_prohib(30,60,[tA_min]);   /* 30, 45, 60 minutes */

/* Convert to hours for calculation */
tA_h : tA_min / 60;
tB_h : tB_min / 60;

/* Distances before speed change */

dA1 : vA1 * tA_h;
dB1 : vB1 * tB_h;

/* Distance closed before both changes */
d_closed_initial : dA1 + dB1;

/* Remaining distance */
d_remaining : D - d_closed_initial;

/* Relative speed after both changes*/

v_rel2 : vA2 + vB2;

/* Time after both have changed */
t_after_changes : d_remaining / v_rel2;

/* Meeting time (hours from start) */
t_meet : max(tA_h, tB_h) + t_after_changes;

/* Teacher answer */
ta1 : t_meet;

/* Explanation helpers for GF */

/* Which cyclist changes speed later */
t_change_max : max(tA_h, tB_h);

/* Symbolic explanation strings */
t_change_expl :
  if tA_h >= tB_h
  then sconcat("Cyclist A finishes the first stage after ", string(tA_min), " minutes.")
  else sconcat("Cyclist B finishes the first stage after ", string(tB_min), " minutes.");
/*mistake - uses total distance to calculate time*/
wrong1 : D / (vA1 + vB1);
/* Mistake: minutes treated as hours */
wrong_minutes :
  max(tA_min, tB_min) + t_after_changes;


]]></text>
