    <questionvariables>
      <text><![CDATA[/* Randomize parameters */
distance : rand(6)*10 + 30;        
time : rand(3) + 2;               
speed_diff : rand(5)*2 + 2;       

/* Determine who is faster randomly */
if rand(2) = 0 then (
    /* Alice is faster */
    alice_faster : true,
    speed_difference : speed_diff
) else (
    /* Bob is faster */
    alice_faster : false,
    speed_difference : -speed_diff
);

/* Generate names randomly */
names : [["Alice", "Bob"], ["Emma", "Liam"], ["Sophia", "Noah"], ["Olivia", "James"]];
name_pair : names[rand(4) + 1];
name1 : name_pair[1];
name2 : name_pair[2];

/* Calculate speeds - system of equations */
/* d = (v_a + v_b) * t  and  v_a - v_b = diff */
/* v_a = (d/t + diff)/2, v_b = (d/t - diff)/2 */

total_speed : distance / time;                /* v_a + v_b */
if alice_faster then (
    v_alice : (total_speed + speed_diff)/2,
    v_bob : (total_speed - speed_diff)/2
) else (
    v_alice : (total_speed - speed_diff)/2,
    v_bob : (total_speed + speed_diff)/2
);

/* Ensure speeds are positive and reasonable */
if v_alice < 5 then v_alice : 5;
if v_bob < 5 then v_bob : 5;

/* Round to nice numbers */
v_alice : round(v_alice*2)/2;  /* Round to nearest 0.5 */
v_bob : round(v_bob*2)/2;

/* Recalculate to ensure consistency */
speed_diff_actual : abs(v_alice - v_bob);
distance_actual : (v_alice + v_bob) * time;

/* Answer variables */
answer1 : if alice_faster then v_alice else v_bob;  /* Faster cyclist */
answer2 : if alice_faster then v_bob else v_alice;  /* Slower cyclist */

/* Alternative forms */
ta1 : ratsimp(answer1);
ta2 : ratsimp(answer2);

/* Distractor variables (common mistakes) */
/* Mistake 1: Using d/t for each */
distractor1_a : distance / time;
distractor1_b : distractor1_a;

/* Mistake 2: Dividing difference equally */
distractor2_faster : (distance/time + speed_diff/2);
distractor2_slower : (distance/time - speed_diff/2);

/* Mistake 3: Reversing who's faster */
distractor3_faster : if alice_faster then v_bob else v_alice;
distractor3_slower : if alice_faster then v_alice else v_bob;

/* Display variables */
distance_disp : distance;
time_disp : time;
speed_diff_disp : speed_diff_actual;
faster_name : if alice_faster then name1 else name2;
slower_name : if alice_faster then name2 else name1;]]></text>
