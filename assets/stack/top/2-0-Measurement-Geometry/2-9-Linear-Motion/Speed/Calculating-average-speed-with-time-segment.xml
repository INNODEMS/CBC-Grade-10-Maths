    <questionvariables>
      <text>/* Randomly generate speeds and times */

s1: 5 * (rand(15) + 4);      /* 20, 25, 30, 35, 40, 45, 50 km/h */
s2: 5 * (rand(30) + 4);      /* 20, 25, 30, 35, 40, 45, 50 km/h */

/* Times: between 1 and 4 hours */
t1: rand(6) + 1;            /* 1, 2, 3, 4 hours */
t2: rand_with_prohib(2,10,[t1]);            /* 1, 2, 3, 4 hours */

/* Ensure speeds are different */
while s1 = s2 do s2: 5 * (rand(12) + 4);

/* Calculate distances */
d1: s1 * t1;
d2: s2 * t2;

/* Calculate correct answer */
total_distance: d1 + d2;
total_time: t1 + t2;
ta: total_distance/total_time;

/* Common mistake: average of speeds */
mistake_ta: (s1 + s2)/2;</text>
