    <questionvariables>
      <text><![CDATA[/* Random event selection */
event_choice: rand([1,2,3]);

/* Event descriptions */
event_text:
  if event_choice=1 then "the sun rising tomorrow"
  elseif event_choice=2 then "getting a head when tossing a fair coin once"
  else "getting a number 7 when rolling a fair six-sided die";

/* Correct classification */
correct_ans:
  if event_choice=1 then "Certain"
  elseif event_choice=2 then "Possible"
  else "Impossible";

/* Dropdown matrix */
m_ans: [
  ["Certain", is(correct_ans="Certain")],
  ["Possible", is(correct_ans="Possible")],
  ["Impossible", is(correct_ans="Impossible")]
];
]]></text>
