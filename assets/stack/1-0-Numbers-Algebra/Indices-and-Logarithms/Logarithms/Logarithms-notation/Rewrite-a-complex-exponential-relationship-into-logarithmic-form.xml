/* Two exponents to choose from */
exp1: rand([3,4,5,6]);
exp2: exp1 + rand([1,2,3]);  /* slightly larger exponent */

/* Choose between exp1 and exp2 to create variation */
chosen_exp: rand([exp1, exp2]);

/* Compute number */
number: base^chosen_exp;

/* Correct logarithm form using Maxima syntax */
log_expr: log(number)/log(base);

/* Common mistakes */
m1: log(chosen_exp)/log(base);      /* swaps result with exponent */
m2: log(base)/log(number);          /* reverses arguments */
m3: number/chosen_exp;              /* arithmetic misuse */
</text>
