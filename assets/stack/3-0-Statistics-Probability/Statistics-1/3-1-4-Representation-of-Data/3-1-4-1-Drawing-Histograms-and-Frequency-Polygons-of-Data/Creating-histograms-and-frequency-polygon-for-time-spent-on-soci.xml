      <text>/****************************************************************/
/* Class intervals (fixed structure, random widths)             */
/****************************************************************/

lower: [0,10,20,30,60];
upper: [10,20,30,60,120];

/* Class widths */
widths: upper - lower;

/****************************************************************/
/* Randomised frequencies                                       */
/****************************************************************/

freq: [
 rand(10)+10,
 rand(10)+15,
 rand(10)+20,
 rand(10)+30,
 rand(10)+15
];

/****************************************************************/
/* Frequency densities                                          */
/****************************************************************/

densities:makelist(freq[i]/widths[i], i, 1, length(freq));

/****************************************************************/
/* Midpoints (for polygon)                                      */
/****************************************************************/

midpoints:makelist((lower[i]+upper[i])/2, i, 1, length(lower));
</text>
