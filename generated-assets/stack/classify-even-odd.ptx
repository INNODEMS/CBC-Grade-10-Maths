    <cell><m>{35687}</m> ÷ 2 = <m>{17843}</m>, remainder <m>{1}</m></cell>
    <cell><alert>Odd</alert></cell>
  </row>

  <row>
    <cell><m>{36122}</m></cell>
    <cell><m>{36122}</m> ÷ 2 = <m>{18061}</m>, remainder <m>{0}</m></cell>
    <cell><alert>Even</alert></cell>
  </row>

  <row>
    <cell><m>{25750}</m></cell>
    <cell><m>{25750}</m> ÷ 2 = <m>{12875}</m>, remainder <m>{0}</m></cell>
