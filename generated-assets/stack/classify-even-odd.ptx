    <cell><m>{35496}</m></cell>
    <cell><m>{35496}</m> ÷ 2 = <m>{17748}</m>, remainder <m>{0}</m></cell>
    <cell><alert>Even</alert></cell>
  </row>

  <row>
    <cell><m>{16853}</m></cell>
    <cell><m>{16853}</m> ÷ 2 = <m>{8426}</m>, remainder <m>{1}</m></cell>
