    <example xml:id="auto_5s2rbsqs">
        <statement>
            <p xml:id="auto_hckfuq0b">
                Use calculator to find the following;(write your answer to <m>\textbf{4 decimal places}</m>).
            </p>
            <p xml:id="auto_4ab055v5">
                <m>sin\,40^\circ \quad cos\, 40^\circ \quad tan\,40^\circ</m>
            </p>
        </statement>
        <solution>
            <p xml:id="auto_5mkc4mef">
                Ensure the calculator is in degree mode
            </p>
            <p xml:id="auto_x9m9hwqr">
                <ol xml:id="auto_jbu7hanm">
                    <li xml:id="auto_9nwtt9cb">
                        <p xml:id="auto_nz9uz47f">
                            <m>sin\,40^\circ</m>
                        </p>
                        <p xml:id="auto_q2wbc3rw">
                            Press <c>sin</c> <m>\to</m> Press <c>40</c> <m>\to</m> Press <c>=</c>
                        </p>
                        <p xml:id="auto_p8ixws6n">
                            <m>sin\,40^\circ=0.6428</m>
                        </p>

                    </li>
                    <li xml:id="auto_34f1o1d3">
                        <p xml:id="auto_7215de6n">
                            <m>cos\,40^\circ</m>
                        </p>
                        <p xml:id="auto_vif4resd">
                            Press <c>cos</c> <m>\to</m> Press <c>40</c> <m>\to</m> Press <c>=</c>
                        </p>
                        <p xml:id="auto_dkpc6mrr">
                            <m>cos\,40^\circ=0.7660</m>
                        </p>
                    </li>
                    <li xml:id="auto_vr64jjmr">
                        <p xml:id="auto_osv7upp9">
                            <m>tan\,40^\circ</m>
                        </p>
                        <p xml:id="auto_798s7z8b">
                            Press <c>tan</c> <m>\to</m> Press <c>40</c> <m>\to</m> Press <c>=</c>
                        </p>
                        <p xml:id="auto_h8p70iiw">
                            <m>tan\,40^\circ=0.8391</m>
                        </p>
                    </li>
                </ol>
            </p>
        </solution>
    </example>
    <example xml:id="auto_28meplxp">
        <statement>
            <p xml:id="auto_836hjcui">
                Find <m>sin\,25^\circ \quad cos\, 25^\circ \quad tan\,25^\circ</m> using calculator .
            </p>
        </statement>
        <solution>
            <p xml:id="auto_y83btmjj">
                <ul xml:id="auto_3c4lcybs">
                    <li xml:id="auto_00xt4f2h">
                        <p xml:id="auto_plpplsr7">
                            <m>sin\,25^\circ</m>
                        </p>
                        <p xml:id="auto_hl7l0fzo">
                            Press <c>sin</c> <m>\to</m> Press <c>25</c> <m>\to</m> Press <c>=</c>
                        </p>
                        <p xml:id="auto_dfrm1892">
                            <m>sin\,25^\circ=0.4226</m>
                        </p>
                    </li>
                    <li xml:id="auto_s5tq9d4g">
                        <p xml:id="auto_pcrk1q48">
                            <m>cos\,25^\circ</m>
                        </p>
                        <p xml:id="auto_zm6gd7bs">
                            Press <c>cos</c> <m>\to</m> Press <c>25</c> <m>\to</m> Press <c>=</c>
                        </p>
                        <p xml:id="auto_l7rxx720">
                            <m>cos\,25^\circ=0.9063</m>
                        </p>
                    </li>
                    <li xml:id="auto_9nzs5z4d">
                        <p xml:id="auto_ctlee56s">
                            <m>tan\,25^\circ</m>
                        </p>
                        <p xml:id="auto_g708mrqe">
                            Press <c>tan</c> <m>\to</m> Press <c>25</c> <m>\to</m> Press <c>=</c>
                        </p>
                        <p xml:id="auto_lon9rji5">
                            <m>tan\,25^\circ=0.4663</m>
                        </p>
                    </li>
                </ul>
            </p>
        </solution>
    </example>
