              \coordinate (B) at (-3,2); 
              \coordinate (C) at (-1,2); 
              \coordinate (D) at (-1,0); 
              \coordinate (E) at (-5,0); 

              %Coordinate for oblect two
              \coordinate (F) at (1,2);
              \coordinate (G) at (2,3);  
              \coordinate (H) at (2,5); 
              \coordinate (I) at (4,5); 
              \coordinate (J) at (4,1); 

              %Object one
              \draw[thick,blue] (A)--(B)--(C)--(D)--(E)--cycle;
              \fill[cyan,opacity=0.5](A)--(B)--(C)--(D)--(E)--cycle;

              %Object two
              \draw[thick,purple] (F)--(G)--(H)--(I)--(J)--cycle;
