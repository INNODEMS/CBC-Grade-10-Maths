            \coordinate (D) at (2,0);
            
            % Fill the trapezoid with pink color
            \draw[magenta!50] (A) -- (B) -- (C) -- (D) -- cycle;
            
            % Draw the trapezoid with thick pink outline
            \draw[thick, magenta] (A) -- (B) -- (C) -- (D) -- cycle;
            
            % Draw arrows indicating parallel sides
            \draw[magenta, thick, -&gt;] (-2.5,0) -- (0.5,0);
            \draw[magenta, thick, -&gt;] (-0.5,2) -- (0.5,2);
            
            % Label the vertices (optional)
            \node[below left] at (A) {A};
            \node[above left] at (B) {B};
            \node[above right] at (C) {C};
            \node[below right] at (D) {D};
