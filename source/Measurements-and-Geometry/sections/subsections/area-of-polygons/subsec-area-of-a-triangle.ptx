                        \node[above] at (0,3) {\textbf{N}};
                         \node[above left] at (-1,3) {(b)};
                        % Side labels
                        \node[left] at (-0.2,1.5) {\Large 15};
                        \node[below] at (2,-0.3) {\Large 20};
                        \node[above right] at (1.8,1.6) {\Large $x$};

                        % Right-angle marker at P
                        \draw (0,0) -- (0.3,0) -- (0.3,0.3) -- (0,0.3) -- cycle; 
