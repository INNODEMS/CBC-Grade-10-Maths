                    \begin{tikzpicture}
                         % Triangle PNO
                        \draw [thick,fill=blue!30] (0,0) -- (5,0) -- (2,3) -- cycle;

                        % Labels for vertices
                        \node[left] at (0,0) {\textbf{P}};
