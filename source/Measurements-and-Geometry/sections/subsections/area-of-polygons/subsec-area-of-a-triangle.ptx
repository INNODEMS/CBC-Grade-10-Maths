                        \draw[thick] (4.5,0) arc[start angle=180, end angle=146, radius=0.8];
                        \node at (4,0.3) {\Large 36Â°};
                    \end{tikzpicture}
                </latex-image>
                </image>
                <image>
                <latex-image label="pembe-tatu2">
                    \begin{tikzpicture}
                                        
                        % Draw the right-angled triangle
                        \draw [thick,fill=pink] (0,0) -- (4,0) -- (0,3) -- cycle;

                        % Labels for vertices
                        \node[left] at (0,0) {\textbf{P}};
