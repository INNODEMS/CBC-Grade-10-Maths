<subsection xml:id="subsec-surface-area-of-a-triangular-prism">
    <title>Surface Area of a Triangular Prism</title>
    <image> 
        <shortdescription> Net of a triangular prism.</shortdescription>
        <latex-image>
            \begin{tikzpicture}
                % Define base rectangle
                \draw[dashed] (0,0) rectangle (8,8);

                % Triangular faces
                \draw[thick] (0,0) -- (4,-4) -- (8,0);
                \draw[thick] (0,8) -- (4,12) -- (8,8);

                % Fold lines (dashed)
                \draw[dashed] (4,12) -- (4,8);
                \draw[dashed] (4,-4) -- (4,0);
                \draw[dashed] (2,12) -- (6,12);
                \draw[dashed] (2,-4) -- (6,-4);
                \draw[thick] (8,0) --(12,0) --(12,8) --(8,8);
                \draw[thick] (0,0) --(-4,0) --(-4,8) --(0,8);
                
                % Labels
                \node[above] at (4,10) {\small 3 cm};
                \node[below] at (4,-2) {\small 3 cm};
                \node[below] at (4,0.5) {\small 8 cm};
                \node[right] at (8,4) {\small 12 cm};
            \end{tikzpicture}
        </latex-image>
    </image>
        <p>
           Find the Surface area of the triangular prism below. 
        </p> 
        <image>
        <latex-image>
            \begin{tikzpicture}
                % Rectangle (side face)
                \draw[thick] (0,0) rectangle (8,8);
                
                % Two triangles (top and bottom)
                \draw[thick] (0,0) -- (4,-3) -- (8,0);
                \draw[thick] (0,8) -- (4,11) -- (8,8);

                % Fold lines (dashed)
                \draw[dashed] (4,11) -- (4,8);
                \draw[dashed] (4,-3) -- (4,0);

                % Labels
                \node[below] at (4,-1) {\small 3 cm};
                \node[above] at (4,9.5) {\small 3 cm};
                \node[below] at (4,0) {\small 8 cm};
                \node[right] at (8,4) {\small 8 cm};
            \end{tikzpicture}
        </latex-image>
        </image>   
