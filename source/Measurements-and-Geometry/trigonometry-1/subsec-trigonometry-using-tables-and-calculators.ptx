    <title>Trigonometry Using Tables and Calculators</title>
    <axiom component="resources">
        <!-- Link to blurb -->
        <xi:include href="../../resources-blurb-lesson.ptx" />

        <p>
            <dataurl source="lesson_plans/measurements-and-geometry/trigonometry-1/trigonometry-using-tables-and-calculators.pdf"> Lesson Plan </dataurl>
        </p>
