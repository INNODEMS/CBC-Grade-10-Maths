        <exercises xml:id="exercises-Logarithms-notation">
            <exercise xml:id="auto_l37rjig8">
                <statement>
                    <p xml:id="auto_wmcy8xqu">
                        What are the logarithmic form of:
                    </p>
                    <p xml:id="auto_asvdfeg2">
                        <ol xml:id="auto_gg6izoaf" marker="a)" cols="2">
                            <li xml:id="auto_jpn12zzt">
                                <p xml:id="auto_yq2vmge7">
                                    <m>2^6 = 64</m>
                                </p>
                            </li>
                            <li xml:id="auto_f0l7sbjy">
                                <p xml:id="auto_c3f4fxdt">
                                    <m>5^3 = 125</m>
                                </p>
                            </li>
                            <li xml:id="auto_ibtuth22">
                                <p xml:id="auto_9twm5uc7">
                                    <m>3^x = 81</m>
                                </p>
                            </li>
                            <li xml:id="auto_12a1e0jp">
                                <p xml:id="auto_t86qzca0">
                                    <m>8^{\frac {2}{3}} = 4</m>
                                </p>
                            </li>
                            <li xml:id="auto_jpn12zzt_e">
                                <p xml:id="auto_yq2vmge7_e">
                                    <m>8^4 = 4096</m>
                                </p>
                            </li>
                            <li xml:id="auto_f0l7sbjy_f">
                                <p xml:id="auto_c3f4fxdt_f">
                                    <m>6^y = 216</m>
                                </p>
                            </li>
                            <li xml:id="auto_ibtuth22_g">
                                <p xml:id="auto_9twm5uc7_g">
                                    <m>9^{\frac {1}{2}} = 3</m>
                                </p>
                            </li>
                            <li xml:id="auto_12a1e0jp_h">
                                <p xml:id="auto_t86qzca0_h">
                                    <m>4^{-2} = \frac {1}{16}</m>
                                </p>
                            </li>
                        </ol>
                    </p>
                </statement>
            <answer>
                <p xml:id="auto_5pkuiq4q">
                    <alert>Answer:</alert>
                </p>
                <p xml:id="auto_ucq06q25">
                    <ol xml:id="auto_7s3puq78" marker="a)">
                        <li xml:id="auto_ie4yh1qe"><m>\log_{2}64 = 6</m></li>
                        <li xml:id="auto_2abm77yq"><m>\log_{5}125 = 3</m></li>
                        <li xml:id="auto_4g0wrrcv"><m>\log_{3}81 = x = 4</m></li>
                        <li xml:id="auto_ej6trx22"><m>\log_{8}4 = \tfrac{2}{3}</m></li>
                        <li xml:id="auto_mmdk05d8"><m>\log_{8}4096 = 4</m></li>
                        <li xml:id="auto_ixpqfg27"><m>\log_{6}216 = y = 3</m></li>
                        <li xml:id="auto_ldyb1563"><m>\log_{9}3 = \tfrac{1}{2}</m></li>
                        <li xml:id="auto_q2lfpuqp"><m>\log_{4}\tfrac{1}{16} = -2</m></li>
                    </ol>
                </p>
            </answer>
            </exercise>
            <exercise xml:id="auto_3lj821po">
                <statement>
                    <p xml:id="auto_0erm005q">
                        Express <m>10^4 = 10000</m> in logarithmic form.
                    </p>
                </statement>
            <answer>
                <p xml:id="auto_4alum84f">
                    <alert>Answer:</alert>
                </p>
                <p xml:id="auto_oqpt2x9v">
                    <m>\log_{10}10000 = 4\quad\text{(i.e., }\log 10000 = 4\text{)}</m>
                </p>
            </answer>
            </exercise>
            <exercise xml:id="auto_eu9paaa2">
                <statement>
                    <p xml:id="auto_ew6fez2n">
                        Find the value of <m>y</m> given that <m>\log_y 81 = 4</m>
                    </p>
                </statement>
            <answer>
                <p xml:id="auto_wgdjxqbl">
                    <alert>Answer:</alert>
                </p>
                <p xml:id="auto_59e5x7ac">
                    <m>y^{4}=81\Rightarrow y=3</m>
                </p>
            </answer>
            </exercise>
            <exercise xml:id="auto_4euvnhvz">
                <statement>
                    <p xml:id="auto_clhurgna">
                        Solve for <m>x</m> if <m>\log_2 x = 5</m>
                    </p>
