        <exercises xml:id="exercises-Logarithms-notation">
            <exercise xml:id="auto_l37rjig8">
                <statement>
                    <p xml:id="auto_wmcy8xqu">
                        What are the logarithmic form of:
                    </p>
                    <p xml:id="auto_asvdfeg2">
