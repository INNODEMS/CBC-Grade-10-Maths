    <subsubsection xml:id="subsubsec-negative-and-zero-indices">
        <title>Zero and Negative Indices</title>
        <axiom component="resources">
            <!-- Link to blurb -->
            <xi:include href="../../../../../source/resources-blurb-subsec.ptx" />

            <sbsgroup widths="45% 45%" margins="2% 2%">
                <sidebyside>
