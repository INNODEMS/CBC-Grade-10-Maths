    <subsubsection xml:id="subsec-laws-of-indices">
        <title>Laws of Indices</title>
        <axiom component="resources">
            <!-- Link to blurb -->
            <xi:include href="../../../../../source/resources-blurb-subsec.ptx" />

            <sbsgroup widths="45% 45%" margins="2% 2%">
                <sidebyside>
                    <p xml:id="auto_diroc4wm">
                        My learners <alert>do not have access</alert> to devices during class:                  
                    </p>
                    <p xml:id="auto_3b4zps8g">
                        My learners <alert>have access</alert> to devices during class:
                    </p>
                </sidebyside>        
                <sidebyside>
                    <p xml:id="auto_vxjbfoyy">
                        <dataurl source="lesson-plans/Numbers and Algebra/Indices and Logarithms/Without Devices PDFs/Laws of Indicies.pdf"> Offline lesson plan </dataurl>
                    </p>
                    <p xml:id="auto_fo2k10hi">
                        <dataurl source="lesson-plans/Numbers and Algebra/Indices and Logarithms/With Devices PDFs/Laws of Indicies.pdf"> Online lesson plan </dataurl>
                    </p>
                </sidebyside>
                <sidebyside>
                    <p xml:id="auto_df207ner">
                        <dataurl source="lesson-plans/Numbers and Algebra/Indices and Logarithms/Without Devices PDFs/Step by step guide_Laws of Indicies.pdf"> Offline step-by-step guide</dataurl>
                    </p>
                    <p xml:id="auto_xjsi3p4r">
                        <dataurl source="lesson-plans/Numbers and Algebra/Indices and Logarithms/With Devices PDFs/Step by step guide_Laws of Indicies.pdf"> Online step-by-step guide</dataurl>
                    </p>
                </sidebyside>
