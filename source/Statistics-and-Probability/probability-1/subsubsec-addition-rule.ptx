    <exercises xml:id="exercises-addition-rule-of-probability">
        <exercise xml:id="auto_klmo7e0m">
            <statement>
                <p xml:id="auto_sonrkezt">
                    A student can get an A, B, C, D, or F in a class. What is the probability that the student gets an A or a B?
                </p>
            </statement>
            <answer>
                <p>
                    <m>\frac{2}{5}</m> or <m>40\%</m>.
                </p>
            </answer>
        </exercise>
        <exercise xml:id="auto_7klveitl">
            <statement>
                <p xml:id="auto_pw7pyw96">
                    A die is rolled. What is the probability of rolling a 1 or a 6?
                </p>
            </statement>
            <answer>
                <p>
                    <m>\frac{1}{3}</m> or <m>33.3\%</m>.
                </p>
            </answer>
        </exercise>
        <exercise xml:id="auto_uquc9i20">
            <statement>
                <p xml:id="auto_j57glcko">
                    In a class of 30 students, 15 students like math, 10 students like chemistry, and 5 students like both math and chemistry.
                    What is the probability that a randomly chosen student likes math or chemistry?
                </p>
            </statement>
            <answer>
                <p>
                    <m>\frac{5}{6}</m> or <m>83.3\%</m>.
                </p>
            </answer>
        </exercise>
        <exercise xml:id="auto_pqz4d81r">
            <statement>
                <p xml:id="auto_m691uzwx">
                    A bag contains 8 blue marbles and 5 yellow marbles. What is the probability of drawing a blue marble or a yellow marble?
                </p>
            </statement>
            <answer>
                <p>
                    <m>1</m> or <m>100\%</m>.
                </p>
            </answer>
        </exercise>
        <exercise xml:id="auto_4eonimb1">
            <statement>
                <p xml:id="auto_v04ar5h4">
                    In a class of 25 students, 12 play soccer, 10 play basketball, and 5 play both. What is the probability that a randomly chosen student plays soccer or basketball?
                </p>
            </statement>
            <answer>
                <p>
                    <m>\frac{17}{25}</m> or <m>68\%</m>.
                </p>
            </answer>
        </exercise>
        <exercise xml:id="auto_otcoopfl">
            <statement>
                <p xml:id="auto_yrjn71nr">
                    A bag contains letters of the word <m>MATHEMATICS</m>. What is the probability of selecting a vowel or the letter <m>M</m>?
                </p>
            </statement>
            <answer>
                <p>
                    <m>\frac{7}{13}</m> or <m>53.8\%</m>.
                </p>
            </answer>
        </exercise>
        <exercise xml:id="auto_bv1pi02k">
            <statement>
                <p xml:id="auto_ymjhbvbi">
                    A number is chosen between 1 and 10. What is the probability that it is a 3 or a 7?
                </p>
            </statement>
            <answer>
                <p>
                    <m>\frac{1}{5}</m> or <m>20\%</m>.
                </p>
            </answer>
        </exercise>
        <exercise xml:id="auto_cy4x7rnj">
            <statement>
                <p xml:id="auto_3vivvmc6">
                    A day of the week is chosen at random. What is the probability that it is a Saturday or a Sunday?
                </p>
            </statement>
            <answer>
                <p>
                    <m>\frac{2}{7}</m> or <m>28.6\%</m>.
                </p>
            </answer>
        </exercise>
