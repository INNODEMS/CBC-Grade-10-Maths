    <exercise xml:id="auto_nitujr0l">
        <statement>
            <p>
                Twenty five students in Grade 10 recorded their travel time to school in minutes as follows:
            </p>
            <p>
                15, 8, 22, 40, 12, 25, 8, 20, 15, 20, 15, 8, 15, 40, 12, 22, 12, 20, 8, 19, 20, 14, 12, 8, 22
            </p>

            <ol marker="a)">
                <li>
                    Construct an ungrouped frequency distribution table for the data.
                </li>
            </ol>
        </statement>

        <answer>
            <table>
                <title></title>
                <tabular>
                   
                    <row header="yes">
                        <cell>Time (minutes)</cell>
                        <cell>Frequency (f)</cell>
                        <cell>Tally</cell>
                    </row>
                    <row><cell><m>8</m></cell><cell><m>5</m></cell><cell><m>/////</m></cell></row>
                    <row><cell><m>12</m></cell><cell><m>4</m></cell><cell><m>////</m></cell></row>
                    <row><cell><m>14</m></cell><cell><m>1</m></cell><cell><m>/</m></cell></row>
                    <row><cell><m>15</m></cell><cell><m>4</m></cell><cell><m>////</m></cell></row>
                    <row><cell><m>19</m></cell><cell><m>1</m></cell><cell><m>/</m></cell></row>
                    <row><cell><m>20</m></cell><cell><m>4</m></cell><cell><m>////</m></cell></row>
                    <row><cell><m>22</m></cell><cell><m>3</m></cell><cell><m>///</m></cell></row>
                    <row><cell><m>25</m></cell><cell><m>1</m></cell><cell><m>/</m></cell></row>
                    <row><cell><m>40</m></cell><cell><m>2</m></cell><cell><m>//</m></cell></row>
