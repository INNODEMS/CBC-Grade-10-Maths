    <questionvariables>
      <text><![CDATA[/* 1. Define Class Intervals (Fixed for simplicity in this example) */
/* We will use 5 groups: 40-49, 50-59, 60-69, 70-79, 80-89 */
c1_min: 40; c1_max: 49;
c2_min: 50; c2_max: 59;
c3_min: 60; c3_max: 69;
c4_min: 70; c4_max: 79;
c5_min: 80; c5_max: 89;

/* 2. Generate Random Frequencies for each group */
/* We ensure there are between 3 and 8 students in each group */
f1: rand(6) + 3;
f2: rand(6) + 3;
f3: rand(6) + 3;
f4: rand(6) + 3;
f5: rand(6) + 3;

total_students: f1 + f2 + f3 + f4 + f5;

/* 3. Generate Raw Data Points */
/* We create a list of scores that fit into each group according to the frequencies above */

/* Helper function to generate N random integers in a range [a,b] */
generate_group(n, a, b) := makelist(rand(b - a + 1) + a, k, 1, n);

group1_scores: generate_group(f1, c1_min, c1_max);
group2_scores: generate_group(f2, c2_min, c2_max);
group3_scores: generate_group(f3, c3_min, c3_max);
group4_scores: generate_group(f4, c4_min, c4_max);
group5_scores: generate_group(f5, c5_min, c5_max);

/* Combine all lists into one */
raw_data_list: append(group1_scores, group2_scores, group3_scores, group4_scores, group5_scores);

/* 4. Shuffle the combined list so the groups are mixed up */
shuffled_data: random_permutation(raw_data_list);

/* 5. Create Display String */
data_str: sconcat(shuffled_data[1]);
for i:2 thru total_students do data_str: sconcat(data_str, ", ", shuffled_data[i]);]]></text>
