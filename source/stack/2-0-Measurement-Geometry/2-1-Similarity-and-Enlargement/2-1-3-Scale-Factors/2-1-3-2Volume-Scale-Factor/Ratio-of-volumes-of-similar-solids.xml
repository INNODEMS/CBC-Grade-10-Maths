k: rand(4) + 2;        /* scale factor between 2 and 5 */
b: a * k;
g : gcd(a,b);
if g > 1 then b:a+1 else b:a;

/* Linear scale factor */
scale: b / a;

/* Correct ratio of volumes */
ta: (scale)^3;
ta1:(1/scale)^3;

/*mistakes*/
ta2:scale;
ta3:a/b;]]></text>
