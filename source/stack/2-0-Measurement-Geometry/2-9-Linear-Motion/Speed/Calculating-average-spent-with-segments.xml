d2: 100 * (rand(3) + 1);  /* 100, 200, 300 km */
s2: 10 * (rand(4) + 4);   /* 40, 50, 60, 70 km/h */

/* Calculate times */
t1: d1/s1;
t2: d2/s2;
total_distance: d1 + d2;
total_time: t1 + t2;
ta: total_distance/total_time;
/*mistake*/
